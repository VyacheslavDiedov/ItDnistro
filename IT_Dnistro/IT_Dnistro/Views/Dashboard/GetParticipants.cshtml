@model IEnumerable<IT_Dnistro.ViewModels.ParticipantsViewModel>

    @{
        ViewData["Title"] = "Учасники";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <a asp-action="AddParticipant">Додати учасника</a>

    <table class="table">
        <tr><th>ПІБ</th><th>Телефон</th><th>Email</th><th>Захід</th><th>Дії</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.EMail</td>
                <td>@item.TourName</td>
                <td>
                    <form asp-action="RemoveParticipant" asp-route-id="@item.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Змінити</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>

@model DataBase.Participant
@{
    ViewData["Title"] = "Видалення учасника";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br/>
<h4><b>Видалення учасника</b></h4>

<h5>Ви точно хочете видалити цього учасника?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ПІБ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EMail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="GetParticipants" class="btn btn-sm btn-light">Повернутися до списку</a>
    </form>
</div>
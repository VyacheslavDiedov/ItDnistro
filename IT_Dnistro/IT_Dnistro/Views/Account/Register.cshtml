@{
    Layout = null;
}
@model IT_Dnistro.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="EMail">Введіть Email</label><br />
            <input type="text" asp-for="EMail" />
            <span asp-validation-for="EMail" />
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <label asp-for="FirstName">Введіть ім'я</label><br />
            <input type="text" asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Введіть прізвище</label><br />
            <input type="text" asp-for="LastName" />
        </div>
        <div>
            <label asp-for="Gender">Стать</label><br />
            <input type="text" asp-for="Gender" />
        </div>
        <div>
            <label asp-for="BirthDate">Дата народження</label><br />
            <input type="text" asp-for="BirthDate" />
        </div>
        <div>
            <label asp-for="Phone">Телефон</label><br />
            <input type="text" asp-for="Phone" />
        </div>
        <div>
            <label asp-for="Country">Країна</label><br />
            <input type="text" asp-for="Country" />
        </div>
        <div>
            <label asp-for="City">Місто</label><br />
            <input type="text" asp-for="City" />
        </div>

        <div>
            <input type="submit" value="Регістрація" />
        </div>
    </div>
</form>
@model DataBase.TourType

@{
    ViewData["Title"] = "Видалення туру";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br/>
<h4><b>Видалення туру</b></h4>

<h5>Ви точно хочете видалити цей тур?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва туру
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TourTypeName)
        </dd>
        <dt class = "col-sm-2">
            Опис туру
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TourTypeDescription)
        </dd>
        <dt class="col-sm-2">
            Дата туру
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TourDateFrom) -
            @Html.DisplayFor(model => model.TourDateTo)
        </dd>
        <dt class="col-sm-2">
            Зареєстрованих учасників
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
